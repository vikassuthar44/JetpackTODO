<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jetpacktodo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".ToDoApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackTODO">
        <activity
            android:name=".ui.task.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetpackTODO">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.profile.ProfileScreen" />
        <activity android:name=".ui.createtask.CreateTaskScreen"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.schedule.OnGoingTaskActivity" />
    </application>

</manifest>